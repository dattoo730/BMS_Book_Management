
@{
    Layout = null;
}
<html>
<head>

    <title>@ViewBag.Title</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/bootstrap-3.1.1/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <link href="~/Content/MyStyle.css" rel="stylesheet" />
    <style>
        .error {
            color: tomato;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Register</h3>
                    </div>
                    <div class="panel-body">
                        <form id="registerformid" role="form">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Username" name="username" type="text" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="E-mail" name="email" type="email">
                                </div>
                              
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" name="password" type="password" value="">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Re Password" name="repassword" type="password" value="">
                                </div>

                                <button type="submit" href="#" class="btn btn-lg btn-success btn-block">Register</button>
                            </fieldset>
                        </form>
                        <div class="form-group">
                            <a href="#">Click here to Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Content/bootstrap-3.1.1/js/jquery.min.js"></script>
    <script src="~/Content/bootstrap-3.1.1/js/bootstrap.min.js"></script>
    <script src="~/Content/jquery.validate.min.js"></script>
    <script src="~/Content/additional-methods.min.js"></script>

    <script src="~/Content/MyJs.js"></script>

    <script>
       
    </script>
</body>

</html>











