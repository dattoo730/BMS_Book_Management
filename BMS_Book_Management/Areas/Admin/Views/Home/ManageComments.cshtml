        <script>
    function LoadReplyForm() {
        var url = '@Url.Action("ReplyComment", "Comment")';
        $.ajax({
            url: url,
            type: 'Get',
            cache: false,
            success: function (result) {
                $('#managecommentmodalcontentid').html(result);
                $('#managecommentmodalheaderid').html('Reply Comment');
                $("#managecommentmodalid").modal();
            },
            error: function (e) {
                alert("Something Wrong!");
            }
        });
            }

            function LoadBlockForm() {
