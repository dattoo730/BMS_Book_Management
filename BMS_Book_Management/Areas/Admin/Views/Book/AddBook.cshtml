@{
    ViewBag.Title = "Adding Book";
    Layout = null;
}
@*<script src="~/Content/jquery.validate.min.js"></script>*@

<div class="row">
    <div class="col-lg-12">
        <div class="page-header arrow-left">
            <a class="fa fa-arrow-left" onclick="GetBack()"></a>
            <h3> Add Book</h3>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <form method="post" role="form" id="addingbookformid">

                <div class="form-group row">
                    <label class="col-sm-2 form-control-label dat-lable-input">Title</label>
                    <div class="col-sm-10">
                        <input name="booktitle" id="booktitleid" type="text" class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 form-control-label dat-lable-input">Summary</label>
                    <div class="col-sm-10">
                        <textarea name="booksummary" id="booksummaryid" class="form-control" rows="3"></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 form-control-label dat-lable-input">Category Name</label>
                    <div class="col-sm-10">
                        <select readonly name="bookcategory" id="bookcategoryid" class="form-control">
                            <option value="1">Văn Học</option>
                            <option value="2">Toán Học</option>
                            <option value="3">Tiếng Anh</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 form-control-label dat-lable-input">Author Name</label>
                    <div class="col-sm-10">
                        <select readonly name="bookauthor" id="bookauthorid" class="form-control">
                            <option value="1">Nguyễn Công Hoan</option>
                            <option value="2">Lê Thành Đạt</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 form-control-label dat-lable-input">Publisher Name</label>
                    <div class="col-sm-10">
                        <select readonly name="bookpublishername" id="bookpublishernameid" class="form-control">
                            <option value="1">NXB Sự Thật</option>
                            <option value="2">NXB Thanh Niên</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 form-control-label dat-lable-input">Price</label>
                    <div class="col-sm-10">
                        <input name="bookprice" id="bookpriceid" type="text" class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 form-control-label dat-lable-input">Quantity</label>
                    <div class="col-sm-10">
                        <input name="bookquantity" id="bookquantityid" type="number" class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <label style="margin-top:unset" class="col-sm-2 form-control-label dat-lable-input">IsActive</label>
                    <div class="col-sm-10">
                        <input name="bookisactive" id="bookisactiveid" type="checkbox" value="">
                    </div>
                </div>

                <div class="form-group row">
                    <label style="margin-top:unset" class="col-sm-2 form-control-label dat-lable-input">ImageUrl</label>
                    <div class="col-sm-10">
                        <input name="bookimageurl" id="bookimageurlid" type="file">
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2"></label>
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-default">Create</button>
                    </div>
                </div>

            </form>
            <a href="#">Back to list</a>
        </div>
    </div>
</div>


@Scripts.Render("~/Content/MyJsAdmin.js");
