@{
    ViewBag.Title = "Details Order";
    Layout = null;
}
@model List<BMS_Book_Management.Areas.Admin.Models.DetailOrderViewModel>

<div class="row">
    <div class="page-header arrow-left">
        <a class="fa fa-arrow-left" onclick="GetBack()"></a>
        <h3> Details Order</h3>
    </div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-default row">
            <div class="panel-heading">
                <h4>Detailing Book ID:@Model[0].OrderID</h4>
            </div>
            <div class="panel-body panel-body-margin">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <span>
                                <label>Recipient Name:</label>
                                <i>@Model[0].RecipientName</i>
                            </span>              
                        </div>
                        <div class="form-group">
                            <span>
                                <label>Recipient Phone:</label>
                                <i>@Model[0].RecipientPhone</i>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <span>
                                <label>Recipient Address:</label>
                                <i>@Model[0].RecipientAddress</i>
                            </span>
                        </div>
                        <div class="form-group">
                            <span>
                                <label>Status:</label>
                                <i>@Model[0].Status</i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <span>
                                <label>Order Note:</label>
                                <i>@Model[0].OrderNote</i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 datatable-padding">
                        <table class="table table-responsive table-hover manage-datatable" id="dataTables-detailorder">
                            <thead>
                                <tr>
                                    <th>Book name</th>
                                    <th>Quantity</th>
                                    <th>Book Price</th>
                                    <th>Total price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var i in Model)
                                {
                                    <tr class="gradeA">
                                        <td>@i.BookName</td>
                                        <td>@i.Quantity</td>
                                        <td>@i.Price</td>
                                        <td>@(i.Price*i.Quantity)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Content/MyJsAdmin.js");



