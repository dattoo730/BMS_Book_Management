@model BMS_Book_Management.Areas.Admin.Models.OrdersViewModel

@{
    ViewBag.Title = "UpdateStatus";
    //Layout = null;
}
<div class="row">
    <div class="page-header arrow-left">
        <a class="fa fa-arrow-left" onclick="GetBack()"></a>
        <h3>Update Order</h3>
    </div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-default row">
            <div class="panel-heading">
                <h4>Update Status</h4>
            </div>
            <div class="panel-body panel-body-margin">
                <form method="post" action="/Admin/Order/UpdateStatus">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-md-3 dat-lable-input">Order ID:</label>
                            <div class="col-md-9"><input class="form-control" type="text" value="@Model.OrderID" name="OrderID" readonly></div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 dat-lable-input">UserName:</label>
                            <div class="col-md-9"><input class="form-control col-md-9" type="text" value="@Model.UserName" disabled></div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 dat-lable-input">Created Date:</label>
                            <div class="col-md-9"> <input class="form-control col-md-9" type="text" value="@Model.CreatedDate" disabled></div>                        </div>
                        <div class="row form-group">
                            <label class="col-md-3 dat-lable-input">Current Status:</label>
                            <div class="col-md-9">
                                @if (Model.Status.Equals("Ordered"))
                                {
                                    @Html.DropDownListFor(model => model.Status, new SelectList(new List<object>
                                      {
                                            new SelectListItem { Text = "Cancelled", Value = "-3"},
                                             new SelectListItem { Text = "Ordered", Value = "3"},
                                            new SelectListItem { Text = "Delivering", Value = "4" },
                                            new SelectListItem { Text = "Completed", Value = "2" }
                                      }, "value", "text", 3), new {@class="form-control"})
                                }
                                @if (Model.Status.Equals("Delivering"))
                                {
                                    @Html.DropDownListFor(model => model.Status, new SelectList(new List<object>
                                      {
                                            new SelectListItem { Text = "Cancelled", Value = "-3"},
                                            new SelectListItem { Text = "Delivering", Value = "4"},
                                            new SelectListItem { Text = "Completed", Value = "2" }
                                      }, "value", "text", 4), new { @class = "form-control" })
                                }
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-9 col-md-offset-3">
                                <button class="btn btn-success" type="submit">Update</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>